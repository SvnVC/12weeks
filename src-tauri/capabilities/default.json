{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "fs:allow-rename",
    "fs:allow-mkdir",
    "fs:allow-exists",
    "fs:allow-watch",
    "fs:read-dirs",
    {
      "identifier": "fs:scope",
      "allow": ["**"]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": ["**"]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": ["**"]
    },
        
    "dialog:default"
  ]
}